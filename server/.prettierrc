{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "importOrder": ["^@/(.*)$", "^[./]"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,

    "pluginSearchDirs": ["./node_modules"],

    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript",
                "singleQuote": false,
                "quoteProps": "as-needed",
                "importOrderParserPlugins": ["typescript"],
                "importOrderCaseInsensitive": true,
                "jsxSingleQuote": false
            }
        }
    ]
}
