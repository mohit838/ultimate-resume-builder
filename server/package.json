{
    "name": "ultimate-resume-builder",
    "version": "1.0.0",
    "author": "Mohitul Islam | Frontend engineer",
    "license": "ISC",
    "description": "This is ultimate editions for all whose need to make a free resume or cv",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register ./src/index.ts",
        "build": "tsc && tsc-alias",
        "start": "node dist/index.js",
        "build:start": "npm run build && npm run start",
        "test": "jest --forceExit",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "docker:build": "docker build -t ultimate-resume-builder .",
        "docker:run": "docker run -p 4321:1234 ultimate-resume-builder",
        "audit": "npm audit",
        "audit:fix": "npm audit fix"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "chalk": "^5.4.1",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.1.0",
        "json2csv": "^6.0.0-alpha.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.15.0",
        "morgan": "^1.10.0",
        "mysql2": "^3.14.1",
        "nanoid": "^5.1.5",
        "nodemailer": "^7.0.3",
        "qrcode": "^1.5.4",
        "redis": "^5.0.1",
        "speakeasy": "^2.0.0",
        "winston": "^3.17.0",
        "winston-mongodb": "^6.0.0",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.18",
        "@types/express": "^5.0.2",
        "@types/jest": "^29.5.14",
        "@types/json2csv": "^5.0.7",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.15.18",
        "@types/nodemailer": "^6.4.17",
        "@types/qrcode": "^1.5.5",
        "@types/speakeasy": "^2.0.10",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "supertest": "^7.1.1",
        "ts-jest": "^29.3.4",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "engineStrict": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mohit838/ultimate-resume-builder.git"
    },
    "bugs": {
        "url": "https://github.com/mohit838/ultimate-resume-builder/issues"
